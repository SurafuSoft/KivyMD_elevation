BoxLayout:
    orientation: 'vertical'
    Toolbar:
        id: action_bar
        md_bg_color: app.theme_cls.primary_color
        title: 'StartScreen'
        #left_action_items: ['Hello']
        left_action_items: [['menu', lambda x: app.nav_drawer.toggle()]]

    ScreenManager:
        id: screen_root_manager

        Screen:
            name: 'root_screen'
            BoxLayout:
                orientation: 'vertical'
                padding: [dp(4), dp(0)]
                spacing: dp(1)

                MDCard:
                    size_hint_y: 0.40
                    MDLabel:
                        #size_hint_y: 0.3
                        font_style: 'Display4'
                        theme_text_color: 'Primary'
                        text: "KO"
                        halign: 'center'

                MDCard:
                    size_hint_y: 0.15
                    BoxLayout:
                        orientation: 'horizontal'
                        #size_hint_y: 0.2
                        padding: [dp(10), dp(0), dp(0), dp(0)]
                        spacing: dp(8)

                        SingleLineTextField:
                            id: text_field_error
                            size_hint_x: 0.80
                            hint_text: "Type English meaning of Kanji"
                            message: "Are you confused with Kanji?: ..."
                            message_mode: "on_error"

                        MDRaisedButton:
                            #size_hint_x: 0.20
                            text: "Send"

                MDCard:
                    size_hint_y: 0.45
                    BoxLayout:
                        orientation: 'horizontal'

                        MDAccordion:
                            orientation: 'vertical'
                            size_hint_x: None
                            width: '160dp'

                            MDAccordionItem:
                                title:':D'
                                #icon: '1'
                            MDAccordionItem:
                                title:'K'
                                #icon: 'earth'
                                MDAccordionSubItem:
                                    text: "A"
#                                MDAccordionSubItem:
#                                    text: "N"
#                                MDAccordionSubItem:
#                                    text: "J"
#                                MDAccordionSubItem:
#                                    text: "I"
                            MDAccordionItem:
                                title:'O'
                                #icon: 'earth'
                                MDAccordionSubItem:
                                    text: "R"
#                                MDAccordionSubItem:
#                                    text: "I"
#                                MDAccordionSubItem:
#                                    text: "G"
#                                MDAccordionSubItem:
#                                    text: "I"
#                                MDAccordionSubItem:
#                                    text: "N"

                        MDBottomNavigation:
#                            canvas.before:
#                                Clear
#                            canvas:
#                                Clear
#                            canvas.after:
#                                Clear

                            #size_hint_x: 0.8
                            #elevation: 0
                            #md_bg_color: app.theme_cls.bg_normal

                            id: bottom_navigation_demo
                            MDBottomNavigationItem:
                                name: 'story'
                                text: "Story"
                                icon: "book-open-variant"
                                MDLabel:
                                    font_style: 'Body1'
                                    theme_text_color: 'Primary'
                                    text: "You started as a single drop 丿 and then you developed 龶 to what you are now. That's life."
                                    halign: 'center'

                            MDBottomNavigationItem:
                                name: 'examples'
                                text: "Examples"
                                icon: 'dictionary'
                                BoxLayout:
                                    orientation: 'vertical'
                                    size_hint_y: None
                                    padding: dp(48)
                                    spacing: 10
                                    SingleLineTextField:
                                        hint_text: "You can put any widgets here"
                                        message: "Hello :)"
                                        message_mode: "on_focus"

                            MDBottomNavigationItem:
                                name: 'koohii'
                                text: "Kanji Koohii"
                                icon: 'earth'
                                MDRaisedButton:
                                    #size_hint_x: None
                                    #halign: 'center'
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                    text: "Kanji Koohii"
                                    hint_text: "Hello again"
